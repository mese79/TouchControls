.navKey {
	direction: ltr;
	position: absolute;
	width: 100px;
	text-align: center;
	vertical-align: middle;
	/*border: 1px solid red;*/
}

.navKey button {
	width: 30px;
	height: 30px;
	padding: 0;
	font-family: monospace, "Century Gothic", sans;
	font-size: 12px;
	border-radius: 2px;
}

.navKey button>span {
	font-family: "Tahoma";
	font-size: 11px;
	vertical-align: super;
	margin: 0 -4px 0 -2px;
}

.navKey div:first-child {
	margin: 0 1px 3px 1px;
	/*border: 1px solid blue;*/
}

.navKey div:nth-child(2) button {

	margin: 0 1px 0 1px;
